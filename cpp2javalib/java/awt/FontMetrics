#ifndef _JAVA_AWT_FONTMETRICS_
#define _JAVA_AWT_FONTMETRICS_

#include "../../cpp2javalib.h"

class Font;

/*------------------------------------------------------------*/

class FontMetrics : public Object
    //, Serializable
{
protected:
    FontMetrics(Font* font);
public:
    virtual ~FontMetrics();
    virtual int getAscent() = 0;
    virtual int getDescent() = 0;
    virtual int stringWidth(const char* str) = 0;
};

/*------------------------------------------------------------*/

#endif /* #ifndef _JAVA_AWT_FONTMETRICS_ */
