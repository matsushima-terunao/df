#ifndef _JAVA_AWT_IMAGE_
#define _JAVA_AWT_IMAGE_

#include "../../cpp2javalib.h"

class ColorModel;
class Graphics;
class ImageObserver;
class ImageProducer;

/*------------------------------------------------------------*/

class Image : public Object
{
public:
    Image();
    virtual ~Image();
    virtual Graphics*& getGraphics() = 0;
    virtual int getWidth(ImageObserver* observer) = 0;
    virtual int getHeight(ImageObserver* observer) = 0;
    virtual ImageProducer*& getSource() = 0;
    virtual void flush() = 0;
protected:
    void* _hdc;
    friend class ComponentGraphics;
    Graphics* graphics;
};

/*------------------------------------------------------------*/

#endif /* #ifndef _JAVA_AWT_IMAGE_ */
