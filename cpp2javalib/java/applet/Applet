#ifndef _JAVA_APPLET_APPLET_
#define _JAVA_APPLET_APPLET_

#include "../../cpp2javalib.h"
#include "../awt/Component"

class Image;
class URL;

/*------------------------------------------------------------*/

class Applet : public Component//Panel
{
public:
    virtual URL getCodeBase();
    virtual Image* getImage(URL* url, const char* name);
    virtual void init();
    virtual void start();
    virtual void stop();
    virtual void destroy();
};

/*------------------------------------------------------------*/

#endif /* #ifndef _JAVA_APPLET_APPLET_ */
